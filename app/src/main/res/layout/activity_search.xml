        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/myTxv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/kodchasan"
        android:text="@string/search_tx_4"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/myTxv_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/myTxv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/kodchasan"
        android:text="@string/search_tx_6"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/myTxv_7"
